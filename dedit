#!/bin/dash
#
# http://github.com/mitchweaver/dedit
#
# Open and edit a file from given locations with dmenu
#

FOLDERS="${HOME}/etc \
         ${HOME}/etc/config \
         ${HOME}/bin \
         ${HOME}/usr/startpage \
         ${HOME}/tmp \
         ${HOME}/var/tmp \
         ${HOME}/var/files \
         ${HOME}/var/downloads \
         ${HOME}/var/files/commonly_edited \
         ${HOME}/bin/src/*"

SELECTION=$(ls -HLap ${FOLDERS} | sort -u | \
                grep -v / | menu -p 'Edit:')

[ -n "$SELECTION" ] &&
    for f in ${FOLDERS} ; do
        [ -f "$f"/"$SELECTION" ] &&
            { st -e $EDITOR "$f"/"$SELECTION" & exit ; }
    done
