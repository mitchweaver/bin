#!/bin/sh
#
# https://github.com/mitchweaver/bin
#
# set display brightness on M1 machines with Asahi
# tested working on 2021 14" Macbook Pro
#

die() {
    >&2 echo "$*"
    exit 1
}

usage() {
    die "Usage: ${0##*/} [-i] [-d] [-s value]"
}

warn() {
    >&2 echo "$*"
}

isnum() {
    case $1 in
        ''|*[!0-9]*)
            return 1
            ;;
        *)
            return 0
    esac
}

clamp() {
    if [ "$1" -gt 255 ] ; then
        warn "arg \"$1\" > 255; clamping"
        echo 255
    elif [ "$1" -lt 1 ] ; then
        warn "arg \"$1\" < 1; clamping"
        echo 1
    else
        echo "$1"
    fi
}

set_br() {
    isnum "$1" || die "not a number"

    val=$(clamp "$1")

    path=/sys/class/backlight/apple-panel-bl/brightness

    if [ -w "$path" ] ; then
        if [ -e "$path" ] ; then
            echo "$val" | tee "$path"
        else
            die "Error: $path doesn't seem to exist"
        fi
    else
        die "No write permissions for $path"
    fi
}

get_br() {
    path=/sys/class/backlight/apple-panel-bl/brightness
    if [ -e "$path" ] ; then
        cat "$path"
    else
        die "Error: $path doesn't seem to exist"
    fi
}

main() {
    if [ "$1" ] ; then
        case ${1#-} in
            i) set_br $(( $(get_br) + 6 )) ;;
            d) set_br $(( $(get_br) - 6 )) ;;
            s) set_br "$2" ;;
            *) usage
        esac
    else
        get_br
    fi
}

main "$@"
