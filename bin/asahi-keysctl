#!/bin/sh
#
# https://github.com/mitchweaver/bin
#
# set keyboard backlight brightness on M1 machines with Asahi
# tested working on 2021 14" Macbook Pro
#

die() {
    >&2 echo "$*"
    usage
}

warn() {
    >&2 echo "$*"
}

usage() {
    >&2 printf 'Usage: %s 1-255\n' "${0##*/}"
    exit 1
}

isnum() {
    case $1 in
        ''|*[!0-9]*)
            return 1
            ;;
        *)
            return 0
    esac
}

clamp() {
    if [ "$1" -gt 255 ] ; then
        warn "arg \"$1\" > 255; clamping"
        echo 255
    elif [ "$1" -lt 1 ] ; then
        warn "arg \"$1\" < 1; clamping"
        echo 1
    else
        echo "$1"
    fi
}

isnum "$1" || die "not a number"

val=$(clamp "$1")

path=/sys/class/leds/kbd_backlight/brightness

if [ -w "$path" ] ; then
    if [ -e "$path" ] ; then
        echo "$val" | tee "$path"
    else
        die "Error: $path doesn't seem to exist"
    fi
else
    die "No write permissions for $path"
fi
