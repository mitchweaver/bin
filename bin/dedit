#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# open and edit a file from given locations with dmenu
#
# shellcheck disable=2086
#

# -*-*-*-*-*- settings -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*
folders=\
"""
${XDG_DOCUMENTS_DIR}
${XDG_DOCUMENTS_DIR}/notes
${HOME}/src/bin/bin
${HOME}/src/shit/bin
$(find ~/src/dots -maxdepth 2 -type d ! -path '*/.git*')
"""
#####$(printf '%s\n' ${HOME}/bin/*/)
# -*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*

sel=\
$(\
    for f in $folders ; do
        find -L "$f" \
            -mindepth 1 \
            -maxdepth 1 \
            -type f \
            ! -name "*/.git*" 2>/dev/null
    done | sed 's/.*\///g' | sort -u | dmenu -p 'Edit:'\
)

[ "$sel" ] || exit 1

for f in $folders ; do
    if [ -f "$f/$sel" ] ; then
        printf 'opening: %s/%s' "$f" "$sel"
        if [ "$PLUMBER" ] ; then
            exec $PLUMBER -- "$f/$sel"
        else
            exec kitty --detach --single-instance ${EDITOR:-vi} -- "$f/$sel"
        fi
    fi
done
