#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# use mpv as an image viewer
#

[ "$1" = -- ] && shift

launch() {
    exec mpv \
        --no-config \
        --hwdec=auto-safe \
        --really-quiet \
        --no-keepaspect \
        --ontop \
        --pause \
        --loop \
        --osd-level=0 \
        --background=0.1 \
        --hwdec=auto-safe \
        --autofit-larger=80%x70% \
        --autofit-smaller=10%x10% \
        --no-audio \
        --no-terminal \
        --title="${1##*/}" \
        -- "$1"
}

for image in "$@" ; do
    if [ -f "$image" ] ; then
        launch "$image"
    else
        url=$(printf '%s\n' "$image" | urls >/dev/null)
        if [ -n "$url" ] ; then
            launch "$url"
        else
            >&2 printf 'Error: "%s" does not exist.\n' "$1"
            exit 1
        fi
    fi
done
